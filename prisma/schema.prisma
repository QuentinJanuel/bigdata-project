generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Anime {
  id            Int            @id
  title         String
  titleEnglish  String
  titleSynonyms TitleSynonym[]
  image         String
  type          Type           @relation(fields: [typeId], references: [id])
  typeId        Int
  source        Source         @relation(fields: [sourceId], references: [id])
  sourceId      Int
  episodes      Int
  airingFrom    DateTime?
  airingTo      DateTime?
  duration      Int?
  rating        Rating         @relation(fields: [ratingId], references: [id])
  ratingId      Int
  score         Float
  scoredBy      Int
  rank          Int?
  popularity    Int
  members       Int
  favorites     Int
  background    String
  premiered     String
  broadcast     String
  producers     Producer[]
  licensors     Licensor[]
  studios       Studio[]
  genres        Genre[]
  openings      Opening[]
  endings       Ending[]
  linkTo        Link[]         @relation(name: "to")
  linkFrom      Link[]         @relation(name: "from")
}

model TitleSynonym {
  id      Int    @id @default(autoincrement())
  name    String
  anime   Anime  @relation(fields: [animeId], references: [id])
  animeId Int
}

model Type {
  id    Int     @id @default(autoincrement())
  name  String
  anime Anime[]
}

model Source {
  id    Int     @id @default(autoincrement())
  name  String
  anime Anime[]
}

model Rating {
  id    Int     @id @default(autoincrement())
  name  String
  anime Anime[]
}

model Relation {
  id    Int    @id @default(autoincrement())
  name  String
  links Link[]
}

model Link {
  id         Int       @id @default(autoincrement())
  from       Anime     @relation(fields: [fromId], references: [id], name: "from")
  fromId     Int
  to         Anime     @relation(fields: [toId], references: [id], name: "to")
  toId       Int
  relation   Relation? @relation(fields: [relationId], references: [id])
  relationId Int?
}

model Producer {
  id     Int     @id @default(autoincrement())
  name   String
  animes Anime[]
}

model Licensor {
  id     Int     @id @default(autoincrement())
  name   String
  animes Anime[]
}

model Studio {
  id     Int     @id @default(autoincrement())
  name   String
  animes Anime[]
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String
  animes Anime[]
}

model Opening {
  id      Int    @id @default(autoincrement())
  name    String
  anime   Anime  @relation(fields: [animeId], references: [id])
  animeId Int
}

model Ending {
  id      Int    @id @default(autoincrement())
  name    String
  anime   Anime  @relation(fields: [animeId], references: [id])
  animeId Int
}

model User {
  id        Int       @id
  name      String
  daysSpent Float
  gender    Gender    @relation(fields: [genderId], references: [id])
  genderId  Int
  birthday  DateTime?
  joinedAt  DateTime?
  lastLogin DateTime?
  location  String
  rewatchs  Int
  episodes  Int
}

model Gender {
  id   Int    @id @default(autoincrement())
  name String
  user User[]
}
